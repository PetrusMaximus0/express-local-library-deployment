extends layout 

block content 

    h1 #{title}: #{book.title}
    p Do you really want to delete this book?
    p #[strong Warning! If you delete this book, all of it's instances will be removed!]

    form(method="POST")
        div.form-group 
            input#bookid.form-control(type="hidden", name="bookid", value=book._id)

        button.btn.btn-primary(type="submit") Delete